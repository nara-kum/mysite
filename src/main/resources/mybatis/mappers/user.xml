<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="user">
	
		<!-- 회원가입(저장) -->
			<insert id="insert" parameterType="com.javaex.vo.UserVO">
				<![CDATA[
					insert into users
					values(null,#{id},#{password},#{name},#{gender})
				]]>
			</insert>
			
		<!-- 회원정보수정폼 -->
			<select id="selectOne" parameterType="int" resultType="com.javaex.vo.UserVO">
				<![CDATA[
					select id
						, password
						, name
					    , gender
					from users
					where no = #{no}
				]]>
			</select>
			
		<!-- 회원정보수정 -->
			<update id="update" parameterType="com.javaex.vo.UserVO">
				<![CDATA[
					update users
					set password = #{password}
						, name = #{name}
					    , gender = #{gender}
					where id = #{id}
				]]>
			</update>
			
		<!-- 로그인정보id/pw -->
			<select id="SelectOneByIdPw" parameterType="com.javaex.vo.UserVO" resultType="com.javaex.vo.UserVO">
				<![CDATA[
					select no
						, name
					from users
					where id = #{id}
					and password = #{password}
				]]>
			</select>
	</mapper>
